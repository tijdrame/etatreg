            <column name="montant_commission" type="double">
                <constraints nullable="true" />
            </column>
            <column name="autres_commissions" type="double">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="bdu_cdb" columnName="date_traitement" columnDataType="date"/>
    </changeSet>

